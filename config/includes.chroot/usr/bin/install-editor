#!/bin/bash

# Zenclora Editor Installation Script
# Interactive menu for graphical editor tools.

set -e

GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}    Zenclora Editor Installer             ${NC}"
echo -e "${GREEN}==========================================${NC}"
echo "Which editing tool would you like to install?"
echo ""

options=("GIMP (Raster Graphics)" "Krita (Digital Painting)" "Inkscape (Vector Drawing)" "Pinta (Minimal Paint)" "Install All" "Exit")
PS3="Please enter your choice (1-6): "

select opt in "${options[@]}"
do
    case $opt in
        "GIMP (Raster Graphics)")
            echo "Installing GIMP..."
            sudo apt update && sudo apt install -y gimp
            echo -e "${GREEN}GIMP successfully installed!${NC}"
            break
            ;;
        "Krita (Digital Painting)")
            echo "Installing Krita..."
            sudo apt update && sudo apt install -y krita
            echo -e "${GREEN}Krita successfully installed!${NC}"
            break
            ;;
        "Inkscape (Vector Drawing)")
            echo "Installing Inkscape..."
            sudo apt update && sudo apt install -y inkscape
            echo -e "${GREEN}Inkscape successfully installed!${NC}"
            break
            ;;
        "Pinta (Minimal Paint)")
            echo "Installing Pinta..."
            sudo apt update && sudo apt install -y pinta
            echo -e "${GREEN}Pinta successfully installed!${NC}"
            break
            ;;
        "Install All")
            echo "Installing all editor tools..."
            sudo apt update && sudo apt install -y gimp krita inkscape pinta
            echo -e "${GREEN}All tools successfully installed!${NC}"
            break
            ;;
        "Exit")
            echo "Exiting..."
            exit 0
            ;;
        *) echo "Invalid option $REPLY. Please choose 1-6.";;
    esac
done