#!/bin/bash

# Zenclora Brave Browser Installation Script
# Script to install Brave Browser with feedback.

set -e

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}    Zenclora Brave Browser Installer      ${NC}"
echo -e "${GREEN}==========================================${NC}"
echo -e "${YELLOW}Brave Browser installation is starting...${NC}"

echo "1. Checking dependencies (curl)..."
sudo apt install -y curl

echo "2. Downloading Brave GPG key..."
sudo curl -fsSLo /usr/share/keyrings/brave-browser-archive-keyring.gpg https://brave-browser-apt-release.s3.brave.com/brave-browser-archive-keyring.gpg

echo "3. Adding Brave repository list..."
sudo curl -fsSLo /etc/apt/sources.list.d/brave-browser-release.sources https://brave-browser-apt-release.s3.brave.com/brave-browser.sources

echo "4. Updating package lists..."
sudo apt update

echo "5. Installing Brave Browser..."
sudo apt install -y brave-browser

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}   Brave Browser Successfully Installed!  ${NC}"
echo -e "${GREEN}==========================================${NC}"