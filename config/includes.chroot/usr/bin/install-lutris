#!/bin/bash

# Zenclora Lutris Installer Script
# Installs Lutris Game Manager.

set -e

GREEN='\033[0;32m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${CYAN}==========================================${NC}"
echo -e "${CYAN}    Zenclora Lutris Installer            ${NC}"
echo -e "${CYAN}==========================================${NC}"

echo "1. Updating package lists..."
sudo apt update

echo "2. Installing Lutris..."
sudo apt install -y lutris

echo -e "${CYAN}==========================================${NC}"
echo -e "${GREEN}   Lutris Installation Finished!         ${NC}"
echo -e "${CYAN}==========================================${NC}"
