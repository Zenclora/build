#!/bin/bash

GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}    Zenclora Liquorix Installer           ${NC}"
echo -e "${GREEN}==========================================${NC}"

echo "Fetching and running the Liquorix install script..."
curl -s https://liquorix.net/install-liquorix.sh | sudo bash

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}   Liquorix Kernel Installed!             ${NC}"
echo -e "${GREEN}==========================================${NC}"