#!/bin/bash

# Zenclora Office Suite Installation Script
# Interactive menu for office and document tools.

set -e

# Colors for aesthetics
GREEN='\033[0;32m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

clear
echo -e "${CYAN}==========================================${NC}"
echo -e "${CYAN}       Zenclora Office Installer          ${NC}"
echo -e "${CYAN}==========================================${NC}"
echo "Which office suite or tool would you like to install?"
echo ""

options=(
    "LibreOffice (The Standard Suite)" 
    "Evince (Lightweight PDF Viewer)" 
    "Okular (Feature-Rich Document Viewer)" 
    "Install All" 
    "Exit"
)

PS3="Select an option (1-5): "

select opt in "${options[@]}"
do
    case $opt in
        "LibreOffice (The Standard Suite)")
            echo -e "${GREEN}Installing LibreOffice...${NC}"
            sudo apt update && sudo apt install -y libreoffice libreoffice-gtk3 libreoffice-l10n-en-gb
            echo -e "${GREEN}LibreOffice has been successfully installed!${NC}"
            break
            ;;
        "Evince (Lightweight PDF Viewer)")
            echo -e "${GREEN}Installing Evince...${NC}"
            sudo apt update && sudo apt install -y evince
            echo -e "${GREEN}Evince has been successfully installed!${NC}"
            break
            ;;
        "Okular (Feature-Rich Document Viewer)")
            echo -e "${GREEN}Installing Okular...${NC}"
            sudo apt update && sudo apt install -y okular
            echo -e "${GREEN}Okular has been successfully installed!${NC}"
            break
            ;;
        "Install All")
            echo -e "${GREEN}Installing all office tools...${NC}"
            sudo apt update && sudo apt install -y libreoffice libreoffice-gtk3 libreoffice-l10n-en-gb evince okular
            echo -e "${GREEN}All office applications have been successfully installed!${NC}"
            break
            ;;
        "Exit")
            echo "Exiting..."
            exit 0
            ;;
        *) echo "Invalid selection. Please choose 1-5.";;
    esac
done
