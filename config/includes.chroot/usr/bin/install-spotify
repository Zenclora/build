#!/bin/bash

# Zenclora Spotify Installer Script
# Installs Spotify Music Client.

set -e

GREEN='\033[0;32m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${CYAN}==========================================${NC}"
echo -e "${CYAN}    Zenclora Spotify Installer            ${NC}"
echo -e "${CYAN}==========================================${NC}"

echo "1. Adding Spotify GPG key..."
curl -sS https://download.spotify.com/debian/pubkey_5384CE82BA52C83A.asc | sudo gpg --dearmor --yes -o /etc/apt/trusted.gpg.d/spotify.gpg


echo "2. Adding Spotify repository..."
echo "deb http://repository.spotify.com stable non-free" | sudo tee /etc/apt/sources.list.d/spotify.list > /dev/null

echo "3. Updating package lists..."
sudo apt-get update

echo "4. Installing Spotify Client..."
sudo apt-get install -y spotify-client

echo -e "${CYAN}==========================================${NC}"
echo -e "${GREEN}   Spotify Installation Finished!         ${NC}"
echo -e "${CYAN}==========================================${NC}"