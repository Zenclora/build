#!/bin/bash

# Zenclora Ollama Installation Script
# Installs Ollama for local LLM usage.

set -e

GREEN='\033[0;32m'
CYAN='\033[0;36m'
NC='\033[0m'

clear
echo -e "${CYAN}==========================================${NC}"
echo -e "${CYAN}       Zenclora Ollama Installer          ${NC}"
echo -e "${CYAN}==========================================${NC}"
echo "This script will download and install Ollama on your system."
echo ""

read -p "Do you want to proceed with the installation? (y/n): " confirm
if [[ $confirm == [yY] || $confirm == [yY][eE][sS] ]]; then
    echo -e "${GREEN}Starting installation...${NC}"
    curl -fsSL https://ollama.com/install.sh | sh
    echo ""
    echo -e "${GREEN}Ollama has been successfully installed!${NC}"
    echo "You can now run 'ollama run llama3' or other models."
else
    echo "Installation cancelled."
    exit 0
fi