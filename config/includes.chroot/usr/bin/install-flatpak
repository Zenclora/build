#!/bin/bash

GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}    Zenclora Flatpak Installer            ${NC}"
echo -e "${GREEN}==========================================${NC}"

echo "1. Installing flatpak package..."
sudo apt install -y flatpak

echo "2. Adding Flathub repository..."
sudo flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}   Flatpak Setup Finished!                ${NC}"
echo -e "${GREEN}==========================================${NC}"
