#!/bin/bash

# Zenclora Snap Installer Script
# Installs snapd and sets it up.

set -e

GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}    Zenclora Snap Installer               ${NC}"
echo -e "${GREEN}==========================================${NC}"

echo "1. Updating package lists..."
sudo apt update

echo "2. Installing snapd..."
sudo apt install -y snapd

echo "3. Initializing snapd..."
sudo snap install snapd

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}   Snap Installation Finished!            ${NC}"
echo -e "${GREEN}==========================================${NC}"