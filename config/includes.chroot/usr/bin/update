#!/bin/bash

GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}    Zenclora System Updater               ${NC}"
echo -e "${GREEN}==========================================${NC}"

echo "1. Updating package lists..."
sudo apt-get update -y

echo "2. Upgrading packages..."
sudo apt-get upgrade -y

echo "3. Performing distribution upgrade..."
sudo apt-get dist-upgrade -y

echo -e "${GREEN}Summary of upgrades:${NC}"
sudo apt-get upgrade -s | grep "upgraded"

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}   System Updates Completed!              ${NC}"
echo -e "${GREEN}==========================================${NC}"
