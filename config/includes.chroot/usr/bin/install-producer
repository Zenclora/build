#!/bin/bash

# Zenclora Producer Installation Script
# Interactive menu for media production tools.

set -e

GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo -e "${GREEN}==========================================${NC}"
echo -e "${GREEN}    Zenclora Producer Installer           ${NC}"
echo -e "${GREEN}==========================================${NC}"
echo "Which production tool would you like to install?"
echo ""

options=("OBS Studio (Stream/Record)" "Audacity (Audio Editing)" "Kdenlive (Video Editing)" "Handbrake (Video Transcoder)" "Install All" "Exit")
PS3="Please enter your choice (1-6): "

select opt in "${options[@]}"
do
    case $opt in
        "OBS Studio (Stream/Record)")
            echo "Installing OBS Studio..."
            sudo apt update && sudo apt install -y obs-studio
            echo -e "${GREEN}OBS Studio successfully installed!${NC}"
            break
            ;;
        "Audacity (Audio Editing)")
            echo "Installing Audacity..."
            sudo apt update && sudo apt install -y audacity
            echo -e "${GREEN}Audacity successfully installed!${NC}"
            break
            ;;
        "Kdenlive (Video Editing)")
            echo "Installing Kdenlive..."
            sudo apt update && sudo apt install -y kdenlive
            echo -e "${GREEN}Kdenlive successfully installed!${NC}"
            break
            ;;
        "Handbrake (Video Transcoder)")
            echo "Installing Handbrake..."
            sudo apt update && sudo apt install -y handbrake
            echo -e "${GREEN}Handbrake successfully installed!${NC}"
            break
            ;;
        "Install All")
            echo "Installing all production tools..."
            sudo apt update && sudo apt install -y obs-studio audacity kdenlive handbrake
            echo -e "${GREEN}All tools successfully installed!${NC}"
            break
            ;;
        "Exit")
            echo "Exiting..."
            exit 0
            ;;
        *) echo "Invalid option $REPLY. Please choose 1-6.";;
    esac
done